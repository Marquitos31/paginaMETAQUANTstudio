    <script>
        // Language Switching
        function setLanguage(lang) {
            // Update body class
            document.body.className = lang === 'en' ? 'lang-en' : '';
            
            // Update language buttons
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Update page title and meta
            if (lang === 'en') {
                document.title = 'Metaquant Studio | Specialized Company in MT4/MT5 Programming | Expert Advisors & Indicators';
                document.querySelector('meta[name="description"]').content = 'Metaquant Studio - Specialized company in MT4/MT5 programming. Professional development of Expert Advisors, custom indicators, scripts and trading algorithms. +5 years in the market.';
                document.querySelector('html').setAttribute('lang', 'en');
            } else {
                document.title = 'Metaquant Studio | Empresa Especializada en Programación MT4/MT5 | Expert Advisors e Indicadores';
                document.querySelector('meta[name="description"]').content = 'Metaquant Studio - Empresa especializada en programación MT4/MT5. Desarrollo profesional de Expert Advisors, indicadores personalizados, scripts y algoritmos de trading. +5 años en el mercado.';
                document.querySelector('html').setAttribute('lang', 'es');
            }
        }

        // Animation Observer
        const observerOptions = {
            threshold: 0.05,
            rootMargin: '50px 0px -20px 0px'
        };
        
        // Preload observer for elements coming into view
        const preloadObserver = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Preload animation styles
                    entry.target.style.willChange = 'transform, opacity';
                }
            });
        }, {
            threshold: 0,
            rootMargin: '200px 0px 200px 0px'
        });

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Remove delay for instant animation
                    entry.target.style.transitionDelay = '0s';
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Simulate terminal typing
            setTimeout(simulateTerminalTyping, 500);
            
            // Show profit chart immediately
            setTimeout(showProfitChart, 1000);
            
            // Simulate MQL4/MQL5 code typing
            setTimeout(simulateCodeTyping, 3000);
            
            // Observe fade elements
            const fadeElements = document.querySelectorAll('.fade-up');
            fadeElements.forEach((el, index) => {
                el.style.transitionDelay = `${index * 0.05}s`;
                observer.observe(el);
                preloadObserver.observe(el);
            });

            // Animate numbers
            const statNumbers = document.querySelectorAll('.stat-number');
            const statObserver = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateNumber(entry.target);
                    }
                });
            }, { threshold: 0.2 });

            statNumbers.forEach(num => statObserver.observe(num));

            // Smooth scroll
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Update market time (simulated)
            setInterval(updateMarketStatus, 30000);
        });

        // Simulate terminal typing effect
        function simulateTerminalTyping() {
            const commandElement = document.querySelector('.command');
            const flagElement = document.querySelector('.flag');
            const loadingDots = document.querySelector('.loading-dots');
            const brandDisplay = document.querySelector('.brand-display');
            const terminalStats = document.querySelector('.terminal-stats');
            
            if (!commandElement || !flagElement) return;
            
            const command = commandElement.textContent;
            const flag = flagElement.textContent;
            
            commandElement.textContent = '';
            flagElement.textContent = '';
            brandDisplay.style.opacity = '0';
            terminalStats.style.opacity = '0';
            
            // Type command
            let i = 0;
            const typeCommand = setInterval(() => {
                commandElement.textContent += command[i];
                i++;
                if (i >= command.length) {
                    clearInterval(typeCommand);
                    // Type flag after command
                    setTimeout(() => {
                        let j = 0;
                        const typeFlag = setInterval(() => {
                            flagElement.textContent += flag[j];
                            j++;
                            if (j >= flag.length) {
                                clearInterval(typeFlag);
                                // Show loading dots
                                setTimeout(() => {
                                    loadingDots.classList.add('active');
                                    setTimeout(() => {
                                        loadingDots.classList.remove('active');
                                        // Show brand and stats
                                        brandDisplay.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                                        brandDisplay.style.opacity = '1';
                                        brandDisplay.style.transform = 'translateY(0)';
                                        setTimeout(() => {
                                            terminalStats.style.transition = 'opacity 0.5s ease';
                                            terminalStats.style.opacity = '1';
                                        }, 300);
                                    }, 2000);
                                }, 500);
                            }
                        }, 50);
                    }, 200);
                }
            }, 80);
        }

        // Simulate MQL4/MQL5 code typing
        function simulateCodeTyping() {
            const codeContent = document.getElementById('code-content');
            const cursor = document.getElementById('typing-cursor');
            const profitChart = document.getElementById('profit-chart');
            
            if (!codeContent) return;
            
            const codeLines = [
                { text: '// Expert Advisor - Metaquant Studio', color: '#00c851', delay: 1000 },
                { text: 'void OnTick() {', color: '#1976d2', delay: 500 },
                { text: '    if(CheckSignal()) {', color: '#ffc107', delay: 300 },
                { text: '        OpenPosition();', color: '#b0bec5', delay: 200 },
                { text: '    }', color: '#ffc107', delay: 200 },
                { text: '}', color: '#1976d2', delay: 200 },
                { text: '', color: '#b0bec5', delay: 800 },
                { text: '📈 Profit: +15.47%', color: '#00c851', delay: 300 },
                { text: '⚡ Drawdown: 2.3%', color: '#00c851', delay: 300 },
                { text: '🔄 Trades: 1,247', color: '#00c851', delay: 300 }
            ];
            
            let currentLine = 0;
            let currentChar = 0;
            
            function typeNextChar() {
                if (currentLine >= codeLines.length) {
                    // Animation complete, hide cursor
                    cursor.style.display = 'none';
                    return;
                }
                
                const line = codeLines[currentLine];
                
                if (currentChar === 0) {
                    // Start new line
                    const lineElement = document.createElement('div');
                    lineElement.style.color = line.color;
                    lineElement.style.marginBottom = currentLine >= 7 ? '5px' : '8px';
                    if (currentLine >= 7) {
                        lineElement.style.borderTop = '1px solid #263238';
                        lineElement.style.paddingTop = '10px';
                        lineElement.style.fontSize = '0.9em';
                    }
                    codeContent.appendChild(lineElement);
                }
                
                const currentLineElement = codeContent.children[currentLine];
                
                if (currentChar < line.text.length) {
                    // Type next character
                    currentLineElement.textContent += line.text[currentChar];
                    currentChar++;
                    setTimeout(typeNextChar, 50);
                } else {
                    // Line complete, move to next line
                    currentLine++;
                    currentChar = 0;
                    setTimeout(typeNextChar, line.delay);
                }
            }
            
            // Start typing after a delay
            setTimeout(typeNextChar, 2000);
        }

        // Show animated profit chart
        function showProfitChart() {
            const chart = document.getElementById('profit-chart');
            if (!chart) return;
            
            // Show the chart
            chart.style.opacity = '1';
            
            // Create profit chart data points
            const profitData = [
                { value: 0, label: 'Inicio' },
                { value: 2.5, label: 'Mes 1' },
                { value: 5.8, label: 'Mes 2' },
                { value: 4.2, label: 'Mes 3' },
                { value: 8.7, label: 'Mes 4' },
                { value: 7.3, label: 'Mes 5' },
                { value: 12.4, label: 'Mes 6' },
                { value: 15.47, label: 'Actual' }
            ];
            
            // Calculate chart dimensions
            const maxValue = Math.max(...profitData.map(d => d.value));
            const chartHeight = 100; // Available height for the chart
            const chartWidth = 120; // Available width for the chart
            const pointRadius = 3;
            
            // Create SVG container
            const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
            svg.setAttribute('width', '100%');
            svg.setAttribute('height', '100%');
            svg.setAttribute('viewBox', `0 0 ${chartWidth} ${chartHeight}`);
            svg.style.overflow = 'visible';
            
            // Create profit line path
            const points = profitData.map((data, index) => {
                const x = (index / (profitData.length - 1)) * chartWidth;
                const y = chartHeight - (data.value / maxValue) * chartHeight;
                return `${x},${y}`;
            }).join(' ');
            
            // Create the line path
            const linePath = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            linePath.setAttribute('d', `M ${points.split(' ').join(' L ')}`);
            linePath.setAttribute('stroke', '#00c851');
            linePath.setAttribute('stroke-width', '2');
            linePath.setAttribute('fill', 'none');
            linePath.setAttribute('opacity', '0');
            linePath.style.animation = 'lineDraw 1.5s ease-out 0.5s forwards';
            
            // Create gradient fill
            const defs = document.createElementNS('http://www.w3.org/2000/svg', 'defs');
            const gradient = document.createElementNS('http://www.w3.org/2000/svg', 'linearGradient');
            gradient.setAttribute('id', 'profitGradient');
            gradient.setAttribute('x1', '0%');
            gradient.setAttribute('y1', '100%');
            gradient.setAttribute('x2', '0%');
            gradient.setAttribute('y2', '0%');
            
            const stop1 = document.createElementNS('http://www.w3.org/2000/svg', 'stop');
            stop1.setAttribute('offset', '0%');
            stop1.setAttribute('stop-color', '#00c851');
            stop1.setAttribute('stop-opacity', '0.3');
            
            const stop2 = document.createElementNS('http://www.w3.org/2000/svg', 'stop');
            stop2.setAttribute('offset', '100%');
            stop2.setAttribute('stop-color', '#00c851');
            stop2.setAttribute('stop-opacity', '0.1');
            
            gradient.appendChild(stop1);
            gradient.appendChild(stop2);
            defs.appendChild(gradient);
            svg.appendChild(defs);
            
            // Create filled area
            const fillPath = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            const fillPoints = points.split(' ').map(p => p.split(','));
            const fillPathData = `M 0,${chartHeight} L ${fillPoints.map(p => p.join(',')).join(' L ')} L ${chartWidth},${chartHeight} Z`;
            fillPath.setAttribute('d', fillPathData);
            fillPath.setAttribute('fill', 'url(#profitGradient)');
            fillPath.setAttribute('opacity', '0');
            fillPath.style.animation = 'fillArea 1s ease-out 2s forwards';
            
            svg.appendChild(fillPath);
            svg.appendChild(linePath);
            
            // Create data points
            profitData.forEach((data, index) => {
                const x = (index / (profitData.length - 1)) * chartWidth;
                const y = chartHeight - (data.value / maxValue) * chartHeight;
                
                // Create point
                const point = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
                point.setAttribute('cx', x);
                point.setAttribute('cy', y);
                point.setAttribute('r', pointRadius);
                point.setAttribute('fill', '#00c851');
                point.setAttribute('stroke', '#1a2332');
                point.setAttribute('stroke-width', '1');
                point.setAttribute('opacity', '0');
                point.style.animation = `pointAppear 0.3s ease-out ${2.5 + index * 0.1}s forwards`;
                
                // Create value label
                const label = document.createElementNS('http://www.w3.org/2000/svg', 'text');
                label.setAttribute('x', x);
                label.setAttribute('y', y - 8);
                label.setAttribute('text-anchor', 'middle');
                label.setAttribute('fill', '#00c851');
                label.setAttribute('font-size', '8');
                label.setAttribute('font-family', 'Roboto Mono, monospace');
                label.setAttribute('opacity', '0');
                label.textContent = `+${data.value}%`;
                label.style.animation = `labelAppear 0.3s ease-out ${2.5 + index * 0.1}s forwards`;
                
                svg.appendChild(point);
                svg.appendChild(label);
            });
            
            chart.appendChild(svg);
            
            // Add CSS animations if not already present
            if (!document.querySelector('#profit-chart-styles')) {
                const style = document.createElement('style');
                style.id = 'profit-chart-styles';
                style.textContent = `
                    @keyframes lineDraw {
                        from { opacity: 0; stroke-dasharray: 1000; stroke-dashoffset: 1000; }
                        to { opacity: 1; stroke-dasharray: 1000; stroke-dashoffset: 0; }
                    }
                    @keyframes fillArea {
                        from { opacity: 0; }
                        to { opacity: 1; }
                    }
                    @keyframes pointAppear {
                        from { opacity: 0; transform: scale(0); }
                        to { opacity: 1; transform: scale(1); }
                    }
                    @keyframes labelAppear {
                        from { opacity: 0; transform: translateY(5px); }
                        to { opacity: 1; transform: translateY(0); }
                    }
                `;
                document.head.appendChild(style);
            }
        }

        // Animate numbers
        function animateNumber(element) {
            const finalNumber = element.textContent;
            const isPlus = finalNumber.includes('+');
            const isH = finalNumber.includes('h');
            let number = parseInt(finalNumber.replace(/[^0-9]/g, ''));
            
            let current = 0;
            const steps = 40; // Más pasos para suavidad
            const duration = 2000; // 2 segundos
            let step = 0;
            const timer = setInterval(() => {
                step++;
                // Ease-out cuadrático
                const progress = step / steps;
                const eased = 1 - Math.pow(1 - progress, 2);
                current = Math.round(number * eased);
                if (current > number) current = number;
                element.textContent = current + (isPlus ? '+' : '') + (isH ? 'h' : '');
                if (step >= steps) {
                    element.textContent = number + (isPlus ? '+' : '') + (isH ? 'h' : '');
                    clearInterval(timer);
                }
            }, duration / steps);
        }

        // Simulate market status
        function updateMarketStatus() {
            const statusText = document.querySelector('.market-status span');
            const dot = document.querySelector('.status-dot');
            
            const hour = new Date().getHours();
            if (hour >= 9 && hour <= 17) {
                statusText.textContent = 'MARKETS OPEN';
                dot.style.background = 'var(--bull-green)';
            } else {
                statusText.textContent = 'MARKETS CLOSED';
                dot.style.background = 'var(--bear-red)';
            }
        }

        // Initialize market status
        updateMarketStatus();
    </script>
</body>
</html>
